<div class="card">
  <h1 class="card-header text-dark bg-light">Login</h1>
  <%= form_tag '/login' do %>
    <div class="card-body">
      <div class="form-group">
        <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
      </div>
      <div class="form-group">
        <%= password_field_tag :password, nil, class: "form-control", placeholder: "Enter Password" %>
      </div>
    </div>
    <div class="card-footer">
      <div class="actions">
        <%= submit_tag "Login", class: "btn btn-primary" %>
      </div>
    </div>
  <%end%>
</div>
